BoxlayoutEx:

<BoxlayoutEx>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                
            Button:
                text:"Ambulatorais Žurnāls"
            Button:
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
                   
        BoxLayout:
            orientation: "horizontal"
            
            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5, 1
                ScrollView:
                    List:#saraksts ar skoleniem py failā
                        orientation: "vertical"
                        size_hint: 1, None
                        height: self.minimum_height
                Button:
                    text:"Meklēt"
                    size_hint: 1, 0.1
                
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, 0.5
                        Button:
                            background_color: 0.7, 0.7, 0.7, 1
                            text: "Info par skolenu"
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: 0.117, 1
                            Button:
                                text: "Redeģēt"
                            Button:
                                text: "Dzēst"
                    Button:
                        background_color: 0.7, 0.7, 0.7, 1
                        text: "Iepriekšējie ieraksti"
                BoxLayout:
                    size_hint: 1, 0.1
                    Button:
                        text: "Dzēst izvēlēto ierakstu"
                    Button:
                        text: "Jauns ieraksts" 