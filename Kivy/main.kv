
WindowManager:
    LoginScreen:
    MainScreen:
    AmbulatoraisZurnals:

<Label>:
    font_size: 20


<LoginScreen>:
    LoginScreenCotent:
        orientation: "vertical"
<LoginScreena>:

    name: "login"
    size_hint: None, None
    size: 400, 300
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 250/255, 250/255, 255/255, 1
        RoundedRectangle:
            size: 400, 300
            radius: [10,]
    BoxLayout:
        orientation: "vertical"
        spacing: 40
        padding: 40
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
            
                Label:
                    text: "Lietotājvārds"
                    color: 0,0,0,1
                    font_size: 20
            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: 223/255, 223/255, 230/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]        
                TextInput:
                    id: login
                    multiline: False
                    background_normal: ""
                    background_color: 0,0,0,0
                    font_size: 20
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"    
                Label:
                    text: "Parole"
                    color: 0,0,0,1
                    font_size: 20  
            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: 223/255, 223/255, 230/255, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,] 
                    Color:
                        rgba: 6/255, 214/255, 160/255, 1
                    Line:
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                        width: 0.5
                        dash_offset: 2
                        dash_length: 4      
                TextInput:
                    id: passw
                    multiline: False
                    password: True
                    background_normal: ""
                    background_color: 0,0,0,0
                    font_size: 20
        BoxLayout:
            orientation: "horizontal"
            canvas.before:

                Color:
                    rgba: root.manager.main[2]
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,] 
            Button:
                font_size: 20
                text: "Pieslēgties"
                backgroun_normal: ""
                background_color: 0, 0, 0, 0
                on_release: root.verify_credentials()
<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: root.manager.black_c[1]
