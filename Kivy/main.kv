WindowManager:
    LoginScreen:
    MainScreen:
    AmbulatoraisZurnals:

<LoginScreen>:
    name: "login"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "Login: "

            TextInput:
                id: login
                multiline: False
            
            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release: root.verify_credentials()
<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                
            Button:
                text:"Ambulatorais Žurnāls"
                on_release:
                    app.root.current = "zurnals"
                    root.manager.transition.direction = "left"
            Button:
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
                   
        BoxLayout:
            orientation: "horizontal"
            
            BoxLayout:
                orientation: "vertical"
                width: 225
                size_hint: None, 1
                ScrollView:
                    List:#saraksts ar skoleniem py failā
                        orientation: "vertical"
                        size_hint: 1, None
                        height: self.minimum_height
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 0.1
                    TextInput:
                        text: ""
                        size_hint: 2, 1
                    Button:
                        text:"Meklēt"
                
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, 0.2
                        BoxLayout:#Logs informācijai par skolēnu
                            orientation:"horizontal" #Logs informācijai par skolēnu
                            Label:
                                text: root.klase
                            Label:
                                text: "Vards\nUzvards"
                            Label:
                                text: "Pk"
                            Label:
                                text: "Dzimšanas\ndati"
                            Label:
                                text: "Telefona\nnumurs"
                            Label:
                                text: "Med\nkarte"
                            Label:
                                text: "Hroniskās\nslimības"
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: 0.117, 1
                            Button:
                                text: "Rediģēt"
                            Button:
                                text: "Arhivēt"
                    Button:
                        size_hint: 1, 0.5
                        background_color: 0.7, 0.7, 0.7, 1
                        text: "Izvēlētais ieraksts"
                    Button:
                        background_color: 0.7, 0.7, 0.7, 1
                        text: "Citi skolēna ieraksti"
                BoxLayout:
                    size_hint: 1, 0.1
                    Button:
                        text: "Dzēst izvēlēto ierakstu"
                    Button:
                        text: "Jauns ieraksts"

<AmbulatoraisZurnals>:
    name: 'zurnals'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text:"Ambulatorais Žurnāls"
            Button:
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
        Label:
            text: '--Content--'