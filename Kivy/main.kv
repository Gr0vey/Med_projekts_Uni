WindowManager:
    LoginScreen:
    MainScreen:
    AmbulatoraisZurnals:

<LoginScreen>:
    name: "login"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "Login: "

            TextInput:
                id: login
                multiline: False
            
            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release: root.verify_credentials()
<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                
            Button:
                text:"Ambulatorais Žurnāls"
                on_release:
                    app.root.current = "zurnals"
                    root.manager.transition.direction = "left"
            Button:
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
                   
        BoxLayout:
            orientation: "horizontal"
            
            BoxLayout:
                orientation: "vertical"
                width: 225
                size_hint: None, 1
                ScrollView:
                    List:#saraksts ar skoleniem py failā
                        orientation: "vertical"
                        size_hint: 1, None
                        height: self.minimum_height
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 0.1
                    TextInput:
                        text: ""
                        size_hint: 2, 1
                    Button:
                        text:"Meklēt"
                
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            size_hint: 1, 0.5
                            background_color: 0.7, 0.7, 0.7, 1
                            text: "Izvēlētais ieraksts"
                        Button:
                            background_color: 0.7, 0.7, 0.7, 1
                            text: "Citi skolēna ieraksti"
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            text: "Dzēst izvēlēto ierakstu"
                        Button:
                            text: "Jauns ieraksts"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: None, 1
                    size: 200, 0
                    BoxLayout:#Logs informācijai par skolēnu
                        orientation:"vertical" #Logs informācijai par skolēnu
                        Label:
                            id: klase
                            text: root.klase
                            halign: 'left'
                        Label:
                            id: vards
                            text: root.vards
                        Label:
                            id: pk
                            text: root.pk
                        Label:
                            id: dzimsanas_d
                            text: root.dzimsanas_d
                        Label:
                            id: tel
                            text: root.tel
                        Label:
                            id: med
                            text: root.med
                        Label:
                            id: slimibas
                            text: root.slimibas
                        Label:
                            id: piezimes
                            size_hint: 1, 10
                            text: root.piezimes
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, 0.1
                        Button:
                            text: "Rediģēt"
                        Button:
                            text: "Arhivēt"
<AmbulatoraisZurnals>:
    name: 'zurnals'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text:"Ambulatorais Žurnāls"
            Button:
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
        Label:
            text: '--Content--'