#:import NoTransition kivy.uix.screenmanager.NoTransition
WindowManager:
    LoginScreen:
    MainScreen:
    AmbulatoraisZurnals:

<Label>:
    font_size: 20

<LoginScreen>:
    name: "login"
    size_hint: None, None
    size: 400, 300
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 250/255, 250/255, 255/255, 1
        RoundedRectangle:
            size: 400, 300
            radius: [10,]
    BoxLayout:
        orientation: "vertical"
        spacing: 40
        padding: 40
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "horizontal"
            
                Label:
                    text: "Lietotājvārds"
                    color: 0,0,0,1
                    font_size: 20
            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: 223/255, 223/255, 230/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]        
                TextInput:
                    id: login
                    multiline: False
                    background_normal: ""
                    background_color: 0,0,0,0
                    font_size: 20
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "horizontal"    
                Label:
                    text: "Parole"
                    color: 0,0,0,1
                    font_size: 20  
            BoxLayout:
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: 223/255, 223/255, 230/255, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,] 
                    Color:
                        rgba: 6/255, 214/255, 160/255, 1 #06D6A0
                    Line:
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                        width: 0.5
                        dash_offset: 2
                        dash_length: 4      
                TextInput:
                    id: passw
                    multiline: False
                    password: True
                    background_normal: ""
                    background_color: 0,0,0,0
                    font_size: 20
        BoxLayout:
            orientation: "horizontal"
            canvas.before:

                Color:
                    rgba: root.accent1k #6/255, 214/255, 160/255, 1 #06D6A0
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,] 
            Button:
                font_size: 20
                text: "Pieslēgties"
                backgroun_normal: ""
                background_color: 0, 0, 0, 0
                on_release: root.verify_credentials()
<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 223/255, 223/255, 230/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 178/255, 73/255, 179/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, 0.08
            Button:
                text: "Skolēnu saraksts"
                background_normal: ""
                background_color: 0,0,0,0
                color: 250/255, 250/255, 255/255, 1
            Button:
                background_normal: ""
                background_color: 250/255, 250/255, 255/255, 1
                color: 41/225, 41/225, 40/255, 1
                text:"Ambulatorais Žurnāls"
                on_release:
                    app.root.current = "zurnals"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: ""
                background_color: 250/255, 250/255, 255/255, 1
                color: 41/225, 41/225, 40/255, 1
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
                   
        BoxLayout:
            orientation: "horizontal"
            
            BoxLayout:
                id: logs1 #layouts ar skolenu sarakstu un meklesanu
                orientation: "vertical"
                width: 300
                size_hint: None, 1
                ScrollView:
                    List:#saraksts ar skoleniem py failā
                        orientation: "vertical"
                        size_hint: 1, None
                        height: self.minimum_height
                BoxLayout:
                    padding: 5
                    canvas.before:
                        Color:
                            rgba: 250/255, 250/255, 255/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    orientation: "horizontal"
                    size_hint: 1, None
                    height: 60
                    BoxLayout:
                        orientation: "horizontal"
                        canvas.before:
                            Color:
                                rgba: 223/255, 223/255, 230/255, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [15,]
                        TextInput:
                            text:""
                            background_normal: ""
                            background_color: 0,0,0,0
                        SkoleniSearch:
                            size_hint: None, None
                            size: 60, 60
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
            BoxLayout:
                id: logs2
                orientation: "horizontal"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "vertical"
                        ScrollView:
                            Ieraksti:
                                id: ieraksti
                                orientation: "vertical"
                                size_hint: 1, None
                                height: self.minimum_height
                                spacing: 10
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            text: "Dzēst izvēlēto ierakstu"
                        IzveidotIerakstu:
                            text: "Jauns ieraksts"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: None, 1
                    size: 200, 0
                    BoxLayout:#Logs informācijai par skolēnu
                        orientation:"vertical" #Logs informācijai par skolēnu
                        Label:
                            id: klase
                            text: root.klase
                            halign: 'left'
                            color: 0,0,0,1
                        Label:
                            id: vards
                            text: root.vards
                            color: 0,0,0,1
                        Label:
                            id: pk
                            text: root.pk
                            color: 0,0,0,1
                        Label:
                            id: dzimsanas_d
                            text: root.dzimsanas_d
                            color: 0,0,0,1
                        Label:
                            id: tel
                            text: root.tel
                            color: 0,0,0,1
                        Label:
                            id: med
                            text: root.med
                            color: 0,0,0,1
                        Label:
                            id: slimibas
                            text: root.slimibas
                            color: 0,0,0,1
                        Label:
                            id: piezimes
                            size_hint: 1, 10
                            text: root.piezimes
                            color: 0,0,0,1
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, 0.1
                        Button:
                            text: "Rediģēt"
                        Button:
                            text: "Arhivēt"
<AmbulatoraisZurnals>:
    name: 'zurnals'
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 223/255, 223/255, 230/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 178/255, 73/255, 179/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, 0.08
            Button:
                background_normal: ""
                background_color: 250/255, 250/255, 255/255, 1
                color: 41/225, 41/225, 40/255, 1
                text: "Skolēnu saraksts"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text:"Ambulatorais Žurnāls"
                background_normal: ""
                background_color: 0,0,0,0
                color: 250/255, 250/255, 255/255, 1
            Button:
                background_normal: ""
                background_color: 250/255, 250/255, 255/255, 1
                color: 41/225, 41/225, 40/255, 1
                text:"..."#papildus iestatijumi
                size_hint: 0.15, 1
        Label:
            text: '--Content--'